<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff0f"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        tools:layout_constraintLeft_creator="1"
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintVertical_bias="0.432">

        <EditText
            android:id="@+id/houredit"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="textEnd"
            android:textSize="80sp"
            android:textColor="#000"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="182dp" />

        <EditText
            android:id="@+id/minuteedit"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textSize="80sp"
            android:textColor="#000"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="182dp" />

        <EditText
            android:id="@+id/secondedit"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="00"
            android:textColor="#000"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="80sp"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="182dp" />
    </LinearLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:onClick="start"
        android:text="BAÅžLAT"
        android:textColor="#000"
        android:background="@drawable/roundbutton60180p"
        android:layout_marginStart="53dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/stop"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="129dp"
        android:layout_height="51dp"
        android:onClick="stop"
        android:text="DURDUR"
        android:textColor="#000"
        android:background="@drawable/roundbutton60180p"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toRightOf="@+id/start"
        tools:layout_editor_absoluteY="487dp"
        android:layout_marginLeft="7dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="101dp"
        android:layout_height="48dp"
        android:onClick="reset"
        android:text="SIFIRLA"
        android:background="@drawable/roundbutton60180p"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/stop"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/stop"
        android:layout_marginLeft="-35dp" />

    <ProgressBar

        android:id="@+id/sayac"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/circular"
        android:secondaryProgress="100"
        app:layout_constraintBottom_toBottomOf="@+id/start"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="18dp"
        android:layout_height="97dp"
        android:text=":"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="137dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="18dp"
        android:layout_height="97dp"
        android:text=":"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.413"
        android:layout_marginRight="140dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>