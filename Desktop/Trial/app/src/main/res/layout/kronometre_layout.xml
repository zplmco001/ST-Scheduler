<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="325dp"
        android:layout_height="84dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/aytsüre"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/stop"
        app:layout_constraintVertical_bias="0.471">

        <EditText
            android:id="@+id/houredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="80sp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="182dp" />

        <EditText
            android:id="@+id/minuteedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="80sp"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="182dp" />

        <EditText
            android:id="@+id/secondedit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#000"
            android:textColorHint="#000"
            android:textSize="80sp"
            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="182dp" />
    </LinearLayout>

    <ProgressBar

        android:id="@+id/sayac"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/kronometre_layoutp"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/circular"
        android:secondaryProgress="100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="113dp"
        android:layout_height="63dp"
        android:layout_weight="1"
        android:text=":     :"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="65sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/start"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/roundbutton60180pxgreen"
        android:onClick="start"
        android:text="başlat"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="74dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/roundbutton60180pxyellow"
        android:onClick="stop"
        android:text="durdur"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@drawable/roundbutton60180pxreds"
        android:onClick="reset"
        android:text="sıfırla"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="74dp" />

    <Button
        android:id="@+id/tytsüre"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="73dp"
        android:layout_weight="1"
        android:background="@drawable/roundbutton60180pxbluedark"
        android:onClick="tytsüre"
        android:text="TYT"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/aytsüre"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/roundbutton60180pxbluedark"
        android:onClick="ykssüre"
        android:text="ayt"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/ydtsüre"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/roundbutton60180pxbluedark"
        android:text="ydt"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="73dp" />

</android.support.constraint.ConstraintLayout>