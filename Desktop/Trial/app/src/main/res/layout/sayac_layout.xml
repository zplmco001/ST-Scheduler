<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/f3">

    <TextView
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textAlignment="center"
        android:textSize="80sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/minuteEdit"
        app:layout_constraintLeft_toRightOf="@+id/minuteEdit" />

    <EditText
        android:id="@+id/secondEdit"
        android:layout_width="101dp"
        android:layout_height="0dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:text="00"
        android:textAlignment="center"
        android:textSize="80sp"
        android:maxLength="2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/minuteEdit"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/space2" />

    <EditText
        android:id="@+id/minuteEdit"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:text="00"
        android:textAlignment="center"
        android:textSize="80sp"
        android:maxLength="2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space1" />

    <EditText
        android:id="@+id/hourEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="number"
        android:text="00"
        android:textAlignment="center"
        android:textSize="80sp"
        android:maxLength="2"
        app:layout_constraintBottom_toBottomOf="@+id/minuteEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/space1"
        app:layout_constraintTop_toTopOf="@+id/space1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textAlignment="center"
        android:textSize="80sp"
        app:layout_constraintRight_toLeftOf="@+id/minuteEdit"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start"
        android:layout_width="135dp"
        android:layout_height="49dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="79dp"
        android:background="@color/f7"
        android:onClick="startTime"
        android:text="Başlat"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/stop"
        app:layout_constraintTop_toBottomOf="@+id/hourEdit"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/stop"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:onClick="stopTime"
        android:text="Duraklat"
        android:background="@color/f4"
        android:textAlignment="center"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginEnd="33dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/start"
        android:layout_marginRight="33dp"
        tools:layout_editor_absoluteY="254dp"
        tools:layout_editor_absoluteX="217dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:onClick="resetTime"
        android:text="Sıfırla"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/stop"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/space1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="35dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>