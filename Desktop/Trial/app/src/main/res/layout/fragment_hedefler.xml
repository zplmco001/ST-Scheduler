<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f7"
    tools:context="com.trial.kk.trial.Hedefler">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/pzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pzt" />

        <Button
            android:id="@+id/sal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sal" />

        <Button
            android:id="@+id/car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Çar" />

        <Button
            android:id="@+id/per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Per" />

        <Button
            android:id="@+id/cum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cum" />

        <Button
            android:id="@+id/cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cm" />

        <Button
            android:id="@+id/pzr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pzr" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/hedefScroll"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridLayout
                android:id="@+id/gridpzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="3"
                android:rowCount="3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pazartesi">

                <Button
                    android:id="@+id/hedef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hedefekle196px"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </GridLayout>

            <GridLayout
                android:id="@+id/gridsali"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_width="340dp"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Sali">

            </GridLayout>

            <GridLayout
                android:id="@+id/gridcarsamba"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_width="340dp"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Carsamba">

            </GridLayout>

            <GridLayout
                android:id="@+id/gridpersembe"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_width="340dp"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Persembe">

            </GridLayout>

            <GridLayout
                android:id="@+id/gridcuma"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_width="340dp"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Cuma"
                android:layout_marginStart="16dp">

            </GridLayout>

            <GridLayout
                android:id="@+id/gridcumartesi"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_width="340dp"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Cumartesi">

            </GridLayout>

            <GridLayout
                android:id="@+id/gridpazar"
                android:rowCount="2"
                android:columnCount="5"
                android:layout_width="340dp"
                android:layout_height="110dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Pazar">

            </GridLayout>

            <TextView
                android:id="@+id/Carsamba"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/daypostit190270"
                android:text="Çarşamba"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Sali" />

            <TextView
                android:id="@+id/Persembe"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/daypostit290270"
                android:text="Perşembe"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Carsamba" />

            <TextView
                android:id="@+id/Sali"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/daypostit290270"
                android:text="Salı"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridpzt" />

            <TextView
                android:id="@+id/Cuma"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/daypostit190270"
                android:text="Cuma"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Persembe" />

            <TextView
                android:id="@+id/Pazartesi"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/daypostit190270"
                android:text="Pazartesi"
                android:textAlignment="viewStart"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hedef" />

            <TextView
                android:id="@+id/Cumartesi"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/daypostit290270"
                android:text="Cumartesi"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Cuma" />

            <TextView
                android:id="@+id/Pazar"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginBottom="120dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/daypostit190270"
                android:text="Pazar"
                android:textSize="18sp"
                android:textColor="@android:color/background_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Cumartesi" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
